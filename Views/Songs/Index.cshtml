@model IEnumerable<Music_Library_Management_Application.Models.DbModels.Song>

@{
    ViewData["Title"] = "Songs List";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <a asp-controller="MusicLibrary" asp-action="Index" class="btn btn-primary mb-4">
            <i class="fas fa-arrow-left"></i> Back to Music Library
        </a>
        <h2>Songs List</h2>
    </div>

    <div class="song-list-container mb-5 border p-3" style="max-height: 600px; overflow-y: auto;">
        <div class="row align-content-center justify-content-center">
            @foreach (var song in Model)
            {
                <div class="col-10 mb-5">
                    <div class="card shadow-sm" style="background-color: #fff; border: 1px solid #000;">
                        <div class="card-body">
                            <div class="row justify-content-evenly">
                                <div class="col-md-3 d-flex flex-column align-items-center">
                                    <button class="btn btn-primary play-button mb-2" data-song-url="@Url.Action("Play", new { id = song.Id })" data-song-title="@song.SongTitle" style="border: 1px solid black;">
                                        <i class="fas fa-play"></i> Play
                                    </button>
                                    <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-warning mb-2" style="border: 1px solid black;">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Download" asp-route-id="@song.Id" class="btn btn-success mb-2" style="border: 1px solid black;">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@song.Id" class="btn btn-danger mb-2" style="border: 1px solid black;">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="card-title" style="color: #fe6d73;">@song.SongTitle</h5>
                                    <p class="card-text"><strong>Artist:</strong> @song.SongArtist</p>
                                    <p class="card-text"><strong>Album:</strong> @song.SongAlbum</p>
                                    <p class="card-text"><strong>Length:</strong> @song.SongLenght</p>
                                    <p class="card-text"><strong>BPM:</strong> @song.SongBPM</p>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <strong>Description:</strong>
                                    <p class="card-text">@song.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Include Music Player Partial View -->
@Html.Partial("_MusicPlayer")

@section Scripts {
    <script src="~/js/music-player.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/music-player.css">
    <style>
        .card {
            background-color: #fff;
            color: black;
        }

        .btn-warning {
            background-color: #fef9ef;
            color: black;
            border: 1px solid black;
        }

        .btn-info {
            background-color: #17c3b2;
            color: white;
            border: 1px solid black;
        }

        .btn-success {
            background-color: #23c96b;
            color: white;
            border: 1px solid black;
        }

        .btn-primary {
            background-color: #227c9d;
            color: white;
            border: 1px solid black;
        }

        .btn-danger {
            background-color: #fe6d73;
            color: white;
            border: 1px solid black;
        }

            .btn-primary:hover, .btn-warning:hover, .btn-info:hover, .btn-success:hover, .btn-danger:hover {
                opacity: 0.9;
            }

        .song-list-container {
            max-height: 600px;
            overflow: hidden;
        }
    </style>
}

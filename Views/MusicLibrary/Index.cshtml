@{
    ViewData["Title"] = "Music Library";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-4">
            <i class="fas fa-home"></i> Back to Home
        </a>
        <h1>Music Library</h1>
        <p>Manage your songs, create playlists, and explore your music collection with ease.</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <a asp-controller="Songs" asp-action="UploadSongs" class="card text-decoration-none text-dark shadow-sm">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-upload fa-3x mb-3" style="color: #227c9d;"></i>
                    <h5 class="card-title">Upload Songs</h5>
                    <p class="card-text">Add new songs to your library, analyze them, and keep your collection up to date.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Songs" asp-action="Index" class="card text-decoration-none text-dark shadow-sm">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-music fa-3x mb-3" style="color: #17c3b2;"></i>
                    <h5 class="card-title">All Songs</h5>
                    <p class="card-text">Browse and manage all your songs in one place.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Playlists" asp-action="Index" class="card text-decoration-none text-dark shadow-sm">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-list fa-3x mb-3" style="color: #FEF9EF;"></i>
                    <h5 class="card-title">Playlists</h5>
                    <p class="card-text">Create and manage playlists to organize your music.</p>
                </div>
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

        .card-body {
            background-color: #ffcb77;
            border-radius: 15px;
        }

        .card-title {
            color: #fe6d73;
        }

        .card-text, .text-center p, .text-center h1, .nav-link {
            color: black;
        }

        .text-center h1 {
            color: black;
        }

        .card-body .d-flex {
            height: 100%;
        }

        .btn-secondary {
            background-color: #227c9d;
            border: none;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #1e6b85;
                color: #fff;
            }
    </style>
}

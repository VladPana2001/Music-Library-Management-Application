@model Music_Library_Management_Application.Models.MixDetailsViewModel

@{
    ViewData["Title"] = "Mix Details";
}

<h1>Mix Details</h1>

<div>
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <p><strong>Limiter Threshold:</strong> @Model.LimiterThreshold</p>
</div>

<h3>Songs</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start Time (s)</th>
            <th>End Time (s)</th>
            <th>Start Position (s)</th>
            <th>Fade In Duration (s)</th>
            <th>Fade Out Duration (s)</th>
            <th>Volume</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.StartTime</td>
                <td>@song.EndTime</td>
                <td>@song.StartPosition</td>
                <td>@song.FadeInDuration</td>
                <td>@song.FadeOutDuration</td>
                <td>@song.Volume</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Mix")" class="btn btn-primary">Back to List</a>

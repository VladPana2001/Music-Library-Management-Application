@model IEnumerable<Music_Library_Management_Application.Models.DbModels.MixDb>

@{
    ViewData["Title"] = "Your Mixes";
}

<h1>Your Mixes</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
            <th>Audio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mix in Model)
        {
            <tr>
                <td>@mix.Title</td>
                <td>@mix.Description</td>
                <td>
                    <a href="@Url.Action("Details", "Mix", new { id = mix.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Download", "Mix", new { id = mix.Id })" class="btn btn-success">Download</a>
                    <a href="@Url.Action("Delete", "Mix", new { id = mix.Id })" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <audio controls>
                        <source src="@Url.Action("Stream", "Mix", new { id = mix.Id })" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Mix")" class="btn btn-primary">Create New Mix</a>

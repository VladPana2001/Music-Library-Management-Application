@model Music_Library_Management_Application.Models.MixDetailsViewModel

@{
    ViewData["Title"] = "Delete Mix";
}

<h1>Delete Mix</h1>

<div>
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <p><strong>Limiter Threshold:</strong> @Model.LimiterThreshold</p>
</div>

<h3>Songs</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start Time (s)</th>
            <th>End Time (s)</th>
            <th>Start Position (s)</th>
            <th>Fade In Duration (s)</th>
            <th>Fade Out Duration (s)</th>
            <th>Volume</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.StartTime</td>
                <td>@song.EndTime</td>
                <td>@song.StartPosition</td>
                <td>@song.FadeInDuration</td>
                <td>@song.FadeOutDuration</td>
                <td>@song.Volume</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

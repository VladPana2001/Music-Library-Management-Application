@model IEnumerable<MusicFile>

@{
    ViewData["Title"] = "Music Files";
}

<h2>Music Files</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
            <th>Play</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>
                    <a asp-action="Download" asp-route-id="@file.Id" class="btn btn-secondary">Download</a>
                </td>
                <td>
                    <audio controls>
                        <source src="@Url.Action("Play", new { id = file.Id })" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Music_Library_Management_Application.Models.DbModels.Playlist>

@{
    ViewData["Title"] = "Playlists";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Playlists</h1>
        <p class="lead">Manage your playlists, edit details, or download them.</p>
    </div>

    <div class="text-right mb-3">
        <a asp-controller="MusicLibrary" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Music Library
        </a>
        <a asp-action="Create" class="btn btn-primary ml-2">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <div class="playlist-container border p-3" style="max-height: 600px; overflow-y: auto;">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title text-primary">Title: @Html.DisplayFor(modelItem => item.PlaylistTitle)</h4>
                            <p class="card-text">Description: @Html.DisplayFor(modelItem => item.PlaylistDescription)</p>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mr-2">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-2">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                                <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="fas fa-download"></i> Download
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .lead {
            color: #333;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .card {
            background-color: #fff;
            border: 1px solid #ccc;
        }

        .card-body {
            padding: 20px;
        }

        .btn-primary {
            background-color: #17c3b2;
            border: none;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #149b8f;
                color: #fff;
            }

        .btn-warning {
            background-color: #ffcb77;
            border: none;
            color: #fff;
        }

            .btn-warning:hover {
                background-color: #e6b767;
                color: #fff;
            }

        .btn-info {
            background-color: #227c9d;
            border: none;
            color: #fff;
        }

            .btn-info:hover {
                background-color: #1e6b85;
                color: #fff;
            }

        .btn-danger {
            background-color: #fe6d73;
            border: none;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #e65d63;
                color: #fff;
            }

        .btn-success {
            background-color: #17c3b2;
            border: none;
            color: #fff;
        }

            .btn-success:hover {
                background-color: #149b8f;
                color: #fff;
            }

        .card-title {
            color: #227c9d;
        }

        .playlist-container {
            max-height: 600px;
            overflow-y: auto;
            border: 1px solid #000;
            padding: 15px;
        }
    </style>
}

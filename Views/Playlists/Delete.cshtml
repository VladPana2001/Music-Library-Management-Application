@model Music_Library_Management_Application.Models.PlaylistDetailsViewModel

@{
    ViewData["Title"] = "Delete Playlist";
}

<h1>Delete Playlist</h1>

<h3>Are you sure you want to delete this playlist?</h3>
<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Playlist.PlaylistTitle
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Playlist.PlaylistDescription
        </dd>
    </dl>
</div>

<div>
    <h4>Songs in this Playlist</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Length</th>
                <th>BPM</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.Songs)
            {
                <tr>
                    <td>@song.SongTitle</td>
                    <td>@song.SongArtist</td>
                    <td>@song.SongAlbum</td>
                    <td>@song.SongLenght</td>
                    <td>@song.SongBPM</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Playlist.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
